<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BabyGuardian" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@android:color/transparent</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <!--        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>-->
        <!--        &lt;!&ndash; Set the theme of the Activity that follows your splash screen. &ndash;&gt;-->
        <!--        <item name="postSplashScreenTheme">@style/Theme.App</item>-->
    </style>

    <style name="Theme.BabyGuardian.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.BabyGuardian.AppWidgetContainer" parent="Theme.BabyGuardian.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>